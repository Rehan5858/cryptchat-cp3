<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent_black_90"
    android:id="@+id/layoutShimmer"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/transparent_white_10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        android:background="@color/transparent_white_10"
        android:layout_height="72dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/avatarShimmer"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/timer_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/titleShimmer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="                       "
                android:background="@color/transparent_white_40"
                android:textColor="@color/storage_color_videos"
                app:layout_constraintBottom_toBottomOf="@+id/avatarShimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toEndOf="@+id/avatarShimmer"
                app:layout_constraintTop_toTopOf="@+id/avatarShimmer"
                app:layout_constraintVertical_bias="0.514" />

            <TextView
                android:id="@+id/chatStringShimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/intermedium"
                android:text=""
                android:textColor="#F44336"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/avatarShimmer"
                app:layout_constraintEnd_toEndOf="@+id/avatarShimmer"
                app:layout_constraintStart_toStartOf="@+id/avatarShimmer"
                app:layout_constraintTop_toTopOf="@+id/avatarShimmer" />

            <ImageView
                android:id="@+id/imageView2Shimmer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/lock_card_grey" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>