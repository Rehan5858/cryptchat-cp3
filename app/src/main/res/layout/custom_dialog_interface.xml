<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/storage_color_files"
        android:text="*Image Encryption yet to be done*"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/slctd_PHoto"
        android:layout_width="200dp"
        android:visibility="gone"
        android:layout_height="200dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<ImageView
    android:id="@+id/addPhotoView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:src="@drawable/ic_baseline_add_a_photo_24"/>
    <EditText
        android:id="@+id/et_encData"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Add Data"
        android:inputType="textVisiblePassword"
        android:padding="15dp"
        android:textColor="@color/storage_color_videos"
        android:textColorHint="@color/storage_color_videos"
        android:visibility="visible" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/algoGroup"
        android:layout_marginTop="4dp"
        app:selectionRequired="true"
        app:singleSelection="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/rsaBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="RSA" />
        <Button
            android:id="@+id/aesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AES"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/threeDesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3DES"
            style="?attr/materialButtonOutlinedStyle"
            />

        <Button
            android:id="@+id/blowfishBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="B.F" />
    </com.google.android.material.button.MaterialButtonToggleGroup>
</LinearLayout>
